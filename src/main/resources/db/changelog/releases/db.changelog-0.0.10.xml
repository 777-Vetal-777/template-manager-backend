<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-add-header-name-and-header-value-columns-to-instance-table" author="Sergey_Nemets">
        <addColumn tableName="instance">
            <column name="header_name" type="varchar(255)"/>
        </addColumn>
        <addColumn tableName="instance">
            <column name="header_value" type="varchar(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>