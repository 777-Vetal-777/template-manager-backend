<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-user-table" author="Ivan_Semenov">
        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_pk"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-role-table" author="Ivan_Semenov">
        <createTable tableName="role">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="role_pk"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-user-role-table" author="Ivan_Semenov">
        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user" references="user(id)"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_role" references="role(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-user-id-sequence" author="Ivan_Semenov">
        <!-- It starts from 2 because the first id is reserved for global administrator. -->
        <createSequence sequenceName="user_sequence" startValue="2"/>
    </changeSet>

    <changeSet id="005-create-role-id-sequence" author="Ivan_Semenov">
        <createSequence sequenceName="role_sequence"/>
    </changeSet>

    <changeSet id="006-create-default-global-admin-user" author="Ivan_Semenov">
        <insert tableName="role">
            <column name="id" value="1"/>
            <column name="name" value="GLOBAL_ADMINISTRATOR"/>
        </insert>
        <insert tableName="user">
            <column name="id" value="1"/>
            <column name="email" value="admin@email.com"/>
            <column name="first_name" value="admin"/>
            <column name="last_name" value="admin"/>
            <!-- Bcrypt Hash (12 rounds) -->
            <column name="password" value="$2y$12$xr.yJBrG7R5bRYZ6S6b5CuJrzZQeveSGD.aCJo5M6pPv/0ncL9q7u"/>
            <column name="active" value="true"/>
        </insert>
        <insert tableName="user_role">
            <column name="user_id" value="1"/>
            <column name="role_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="007-create-workspace-table" author="Ivan_Semenov">
        <createTable tableName="workspace">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="workspace_pk"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="language" type="varchar(3)" defaultValue="ENG"/>
            <column name="timezone" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="008-create-workspace-sequence" author="Ivan_Semenov">
        <createSequence sequenceName="workspace_sequence"/>
    </changeSet>

    <changeSet id="009-create-template-type-table" author="Vadim_Sorokin">
        <createTable tableName="template_type">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="template_type_pk"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="010-insert-default-template-types" author="Vadim_Sorokin">
        <insert tableName="template_type">
            <column name="id" value="1"/>
            <column name="name" value="header"/>
        </insert>
        <insert tableName="template_type">
            <column name="id" value="2"/>
            <column name="name" value="standard"/>
        </insert>
        <insert tableName="template_type">
            <column name="id" value="3"/>
            <column name="name" value="footer"/>
        </insert>
    </changeSet>

    <changeSet id="011-create-template-type-sequence" author="Vadim_Sorokin">
        <createSequence sequenceName="template_type_sequence"/>
    </changeSet>

    <changeSet id="012-create-template-table" author="Vadim_Sorokin">
        <createTable tableName="template">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="template_pk"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="type_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_type" references="template_type(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="013-create-template-sequence" author="Vadim_Sorokin">
        <createSequence sequenceName="template_sequence"/>
    </changeSet>

    <changeSet id="014-create-template-file-table" author="Vadim_Sorokin">
        <createTable tableName="template_file">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="template_file_pk"/>
            </column>
            <column name="data" type="${blob}">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(1024)"/>
            <column name="version" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_author" references="user(id)"/>
            </column>
            <column name="template_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_template" references="template(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="015-create-template-file-sequence" author="Vadim_Sorokin">
        <createSequence sequenceName="template_file_sequence"/>
    </changeSet>

</databaseChangeLog>